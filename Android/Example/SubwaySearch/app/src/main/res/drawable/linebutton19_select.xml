<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android" android:shape="oval" >
    <corners
        android:radius="0dp"
    />
    <gradient
        android:angle="270"
        android:centerX="54%"
        android:centerColor="#00498B"
        android:startColor="#665F65"
        android:endColor="#3E3E40"
        android:type="linear"
        />
    <padding
        android:left="2dp"
        android:top="2dp"
        android:right="2dp"
        android:bottom="2dp"
        />
    <size
        android:width="30dp"
        android:height="30dp"
        />
    <stroke
        android:width="1dp"
        android:color="#00498B"
        />
</shape>